---
import Layout, { PageType } from "../layouts/Layout.astro";
const hasOverflow = false;
const page: PageType = 'blog';
---

<Layout hasOverflow={hasOverflow} page={page} title="Welcome my Blog.">
	<div class="w-3/4 mt-10">
		<h1 class="text-left block uppercase font-raleway font-bold text-3xl">
			Recent Articles
		</h1>
		<div
			class="grid overflow-hidden grid-cols-3 grid-rows-6 gap-2 grid-flow-row"
		>
			<div class="box row-span-3 col-span-3"></div>
			<div class="box"></div>
			<div class="box"></div>
			<div class="box"></div>
			<div class="box"></div>
			<div class="box"></div>
			<div class="box"></div>
		</div>
	</div>

	<style>
		.box {
			@apply min-w-full
			h-32
			min-h-full
			rounded
			/* border-2 */;
		}
	</style>
</Layout>

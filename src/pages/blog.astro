import Layout from "../layouts/Layout.astro";

const hasOverflow = true;
---

<Layout hasOverflow={hasOverflow} title="Welcome my Blog.">
	<div
		class="w-3/4 grid overflow-hidden grid-cols-2 grid-rows-auto gap-4 grid-flow-row"
	>
		<div class="box row-span-2">1</div>
		<div class="box col-start-2 col-span-1">2</div>
		<div class="box col-start-2 col-span-1">3</div>
		<div class="box">5</div>
		<div class="box">6</div>
		<div class="box">6</div>
		<div class="box">6</div>
		<div class="box">6</div>
		<div class="box">6</div>
		<div class="box">6</div>
		<div class="box">6</div>
	</div>

	<style>
		.box {
			@apply bg-indigo-700
			text-gray-100
			min-w-full
			h-32
			min-h-full
			rounded;
		}
	</style>
</Layout>

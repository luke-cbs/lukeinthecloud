---
import Footer from "@components/Footer.astro";
import NavHeader from "@components/NavHeader.astro";

export interface Props {
	title: string;
	hasOverflow: boolean;
}

const { title, hasOverflow = true } = Astro.props;

const overflowType = !hasOverflow
	? "overflow-hidden h-screen"
	: "overflow h-full";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<script
		src="https://kit.fontawesome.com/dab29081a1.js"
		crossorigin="anonymous"
	></script>
	<body
		class={`${overflowType} bg-neutral-900 h-screen flex flex-col justify-between`}
	>
		<NavHeader />
		<main
			class="relative place-content-center flex flex-col justify-center items-center"
		>
			<slot />
		</main>
		<Footer />

		<style is:global>
			@import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;600;700&family=Raleway:wght@400;500;900&family=Roboto:ital,wght@0,400;0,500;0,900;1,300&display=swap");

			h1 {
				font-size: var(--font-size-xl);
			}

			h2 {
				font-size: var(--font-size-lg);
			}

			code {
				font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
					DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
					monospace;
			}
		</style>

		<style>
			:root {
				--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
				--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
				--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

				--color-text: hsl(0, 0%, 100%);
				--color-bg: hsl(0, 0%, 10%);
				--color-border: hsl(17, 24%, 90%);
			}

			html {
				font-family: "Roboto", sans-serif;
				font-size: var(--font-size-base);
				color: var(--color-text);
				background-color: var(--color-bg);
			}
		</style>
	</body>
</html>
